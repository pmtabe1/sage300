<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-6">
    <h2>Queries</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/">Home</a>
      </li>
      <li class="active">
        <b>Queries</b>
      </li>
    </ol>
  </div>
  <div class="col-lg-6 text-right" style="margin-top: 20px;">
    <div class="form-group">
      <% if can? :create, Query %>
        <%= link_to "New Query", new_query_path, class: "btn btn-w-m btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeIn">
  <% @queries.each do |q| %>
    <div class="vote-item">
      <div class="row">
        <div class="col-md-10">
          <%= link_to q.name, q, class: "vote-title" %>
          <div class="vote-info">
            <p><%= q.description %></p>
            <code><%= truncate(q.statement, length: 150, separator: ' ', escape: false) %></code>
            <div style="margin-top: 5px;">
              <i class="fa fa-clock-o"></i> <a><%= time_ago_in_words(q.created_at) %></a>
              <i class="fa fa-user"></i> <a><%= q.user.full_name %></a>
              <i class="fa fa-pencil"></i> <%= link_to "Edit", edit_query_path(q) %>
              <i class="fa fa-trash"></i> <%= link_to "Delete", query_url(q), method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
        <div class="col-md-2 ">
          <div class="vote-icon">
            <i class="fa fa-database"> </i>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
