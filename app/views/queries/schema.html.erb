<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-6">
    <h2>Queries</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        Queries
      </li>
      <li class="active">
        <b>Schema</b>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeIn">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Schema</h5>
        </div>
        <div class="ibox-content">
          <% @schema.each do |table| %>
            <table class="table schema-table">
              <thead>
                <tr>
                  <th colspan="2">
                    <%= table %>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% ActiveRecord::Base.connection.columns(table).each do |column| %>
                  <tr>
                    <td style="width: 60%;"><%= column.name %></td>
                    <td style="width: 20%;" class="text-muted"><%= column.type %></td>
                    <td style="width: 20%;" class="text-muted"><%= column.limit %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
