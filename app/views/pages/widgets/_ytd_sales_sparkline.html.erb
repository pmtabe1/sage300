<h1 class="m-b-xs"><%= number_to_currency(ytd_sales_current_year, precision: 0) %></h1>
<small>YTD Net Sales - <%= current_year %></small>
<div id="sparkline1" class="m-b-sm"></div>
<div class="row">
  <div class="col-xs-6">
    <small class="stats-label">$ YTD Diff - <%= last_year %></small>
    <h4><%= number_to_currency(ytd_sales_diff, precision: 0) %></h4>
  </div>

  <div class="col-xs-6">
    <small class="stats-label">% YTD Diff - <%= last_year %></small>
    <h4><%= ytd_sales_percentage_diff %></h4>
  </div>
</div>

<script type="text/javascript">
  $(function() {

    var sparklineCharts = function(){
      $("#sparkline1").sparkline(<%= ytd_sales_sparkline %>, {
        type: 'line',
        width: '100%',
        height: '50',
        lineColor: '#1ab394',
        fillColor: "transparent"
      });
    };

    var sparkResize;

    $(window).resize(function(e) {
      clearTimeout(sparkResize);
      sparkResize = setTimeout(sparklineCharts, 500);
    });

    sparklineCharts();
  });
</script>
