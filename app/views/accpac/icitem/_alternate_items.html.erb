<% if @accpac_icitem.ALTSET == 0 %>
  This item does not have alternate items.
<% else %>
  <div class="table-responsive">
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Code</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @alternate_items.each do |item| %>
          <tr>
            <td><%= link_to item.FMTITEMNO, item %></td>
            <td><%= item.DESC %></td>
          <tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
