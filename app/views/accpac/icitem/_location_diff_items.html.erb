<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Item Code</th>
        <th>Description</th>
        <th>Location</th>
        <th class="text-right">Order Loc</th>
        <th class="text-right">Order OE</th>
        <th class="text-right">Commit Loc</th>
        <th class="text-right">Commit OE</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @difference.diff.each do |i| %>
        <tr>
          <td class="col-xs-2"><%= i.FMTITEMNO %></td>
          <td class="col-xs-5"><%= i.DESC %></td>
          <td class="col-xs-1"><%= i.LOCATION %></td>
          <td align="right" class="col-xs-1"><%= number_with_precision(i.QTYSALORDR, precision: 4, delimiter: ",") %></td>
          <td align="right" class="col-xs-1"><%= number_with_precision(i.ORDEREDOE, precision: 4, delimiter: ",") %></td>
          <td align="right" class="col-xs-1"><%= number_with_precision(i.QTYCOMMIT, precision: 4, delimiter: ",") %></td>
          <td align="right" class="col-xs-1"><%= number_with_precision(i.ORDCOMMIT, precision: 4, delimiter: ",") %></td>
          <td>
            <%= link_to "<i class='fa fa-edit'></i>".html_safe, accpac_iciloc_url(id: i.ITEMNO.squish, loc: i.LOCATION.squish, so: i.ORDEREDOE, commit: i.ORDCOMMIT), remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>