<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h4 class="modal-title">Update Inventory</h4>
</div>
<%= form_tag(update_inventory_accpac_iciloc_index_path, method: :patch, remote: true, class: 'form-horizontal m-t-md') do %>
  <div class="modal-body">
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <label class="col-sm-4 control-label">On Sales Order:</label>
          <div class="col-sm-8">
            <%= text_field_tag :on_order, nil, class: "form-control", placeholder: @accpac_iciloc.QTYSALORDR %>
            <span class="help-block m-b-none">This value shoudl be: <%= number_with_precision(params[:so], precision: 4, delimiter: ",") %>.</span>
          </div>
        </div>
      </div>

      <div class="col-lg-12">
        <div class="form-group">
          <label class="col-sm-4 control-label">Commited:</label>
          <div class="col-sm-8">
            <%= text_field_tag :committed, nil, class: "form-control", placeholder: @accpac_iciloc.QTYCOMMIT %>
            <span class="help-block m-b-none">This value shoudl be: <%= number_with_precision(params[:commit], precision: 4, delimiter: ",") %>.</span>
          </div>
        </div>
      </div>

      <%= hidden_field_tag 'item', params[:id] %>
      <%= hidden_field_tag 'location', params[:loc] %>
    </div>
  </div>

  <div class="modal-footer">
    <%= submit_tag "Update", class: "btn btn-white", name: nil, data: { disable_with: "Updating..." } %>
  </div>
  <% end %>