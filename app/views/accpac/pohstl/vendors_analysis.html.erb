<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-6">
    <h2>Purchases Analysis</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/">Home</a>
			</li>
			<li>
				vAnalytics
			</li>
      <li class="active">
        <b>Vendors Analysis</b>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12 animated fadeInRight">
      <div id="project">
        <div class="mail-box-header">
          <h2>Vendors Analysis</h2>
        </div>
      </div>

      <div class="mail-box" id="ibox1">
        <div class="ibox-content" id="content">
          <div class="row">
            <div class="col-lg-12">

              <h3 class="font-bold no-margins">Vendors Analysis Summary</h3>
              <table class="table table-stripped small">
                <thead>
                  <tr>
                    <th>Vendor</th>
                    <th class="text-right">Net Sales</th>
                    <th class="text-right">COGS</th>
                    <th class="text-right">Margin</th>
                    <th class="text-right">Net Purchases</th>
                    <th class="text-right">Inventory</th>
                    <th class="text-right">Debts</th>
                  </tr>
                </thead>
                <tbody>
                  <% @summary.each do |vendor| %>
                    <tr>
                      <td><%= vendor.VENDOR1 %></td>
                      <td align="right"><%= number_with_precision(vendor.NETSALES, precision:2, delimiter: ",") %></td>
                      <td align="right"><%= number_with_precision(vendor.COSTSALES, precision:2, delimiter: ",") %></td>
                      <td align="right"><%= number_with_precision(vendor.MARGIN, precision:2, delimiter: ",") %></td>
                      <td align="right"><%= number_with_precision(vendor.NETPURCHASE, precision:2, delimiter: ",") %></td>
                      <td align="right"><%= number_with_precision(vendor.INVENTORY, precision:2, delimiter: ",") %></td>
                      <td align="right"><%= number_with_precision(vendor.DEBTS, precision:2, delimiter: ",") %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>

            </div>
          </div>
        </div>
      </div>
	</div>
  </div>
</div>
