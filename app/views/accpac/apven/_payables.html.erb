<div class="panel-body">
  <div class="ibox float-e-margins">
    <div class="ibox-content">

      <div class="row">
        <div class="col-lg-9">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th></th>
                <th>0-30</th>
                <th>31-60</th>
                <th>61-90</th>
                <th>90+</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Invocie Amount</td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.u30.sum(:AMTINVCHC), precision: 2) %></td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.u60.sum(:AMTINVCHC), precision: 2) %></td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.u90.sum(:AMTINVCHC), precision: 2) %></td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.m90.sum(:AMTINVCHC), precision: 2) %></td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.sum(:AMTINVCHC), precision: 2) %></td>
              </tr>
              <tr>
                <td>Invoice Amount Due</td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.u30.sum(:AMTDUEHC), precision: 2) %></td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.u60.sum(:AMTDUEHC), precision: 2) %></td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.u90.sum(:AMTDUEHC), precision: 2) %></td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.m90.sum(:AMTDUEHC), precision: 2) %></td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.sum(:AMTDUEHC), precision: 2) %></td>
              </tr>
              <tr>
                <td>Invocie Amount Overdue</td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.u30.sum(:INAMTOVER), precision: 2) %></td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.u60.sum(:INAMTOVER), precision: 2) %></td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.u90.sum(:INAMTOVER), precision: 2) %></td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.m90.sum(:INAMTOVER), precision: 2) %></td>
                <td><%= number_to_currency(@accpac_apven.unpaid_payable.sum(:INAMTOVER), precision: 2) %></td>
              </tr>
            </tbody>
          </table>
          <p>
            <small>Aged amount dues are based on Documents date that are already due.</small>
          </p>
        </div>

        <div class="col-lg-3">
          <ul class="stat-list m-t-lg">
            <li>
              <h2 class="no-margins "><%= number_to_currency(@accpac_apven.AMTBALDUET, precision: 2) %></h2>
              <small>Outstanding A/R Balance </small>
            </li>
            <li>
              <h2 class="no-margins "><%= @accpac_apven.TERMSCODE %></h2>
              <small>Terms </small>
            </li>
          </ul>
        </div>
      </div>

    </div>
  </div>
</div>
