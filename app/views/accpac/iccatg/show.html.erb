<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-8">
    <h2>Inventory Control</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        Inventory Control
      </li>
      <li>
        Item Categories
      </li>
      <li class="active">
        <b><%= @accpac_iccatg.DESC %></b>
      </li>
    </ol>
  </div>
  <div class="col-lg-4">
    <div class="title-action">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal5">
        <i class="fa fa-search"></i>&nbsp;Search</button>
      </button>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeIn">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Items</h5>
          <div class="ibox-tools">
            <a class="fullscreen-link">
              <i class="fa fa-expand"></i>
            </a>
          </div>
        </div>
	      <div class="ibox-content" style="height: 75vh;">
          <% if @items.present? %>
            <div id="category_show_grid" class="ag-theme-balham" style="height: 100%;" 
              data-category_show_path= "<%= accpac_iccatg_path(id: @accpac_iccatg, format: "json") %>">
            </div>
          <% else %>
            <h4>This Category doesn't have any products!</h4>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<%= render 'modal' %>
