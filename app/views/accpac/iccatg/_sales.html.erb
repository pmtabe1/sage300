<!-- Category Area Chart -->
<div class="col-md-8">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><i class="fa fa-bar-chart"></i> Sales by Years</h3>
    </div>
    <div class="panel-body">
      <%= content_tag :div, "", id: "category_sales_chart", data: { sales: sales_category_chart_data }%>
    </div>
  </div>
</div>

<!-- Items Donut Chart -->
<div class="col-md-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><i class="fa fa-pie-chart"></i> Most Saleable Items - <%= current_year %></h3>
    </div>
    <div class="panel-body">
      <%= content_tag :div, "", id: "items_chart" %>
    </div>
  </div>
</div>

<script>
  Morris.Donut({
    element: 'items_chart',
    data: [
      <% @most_saleable_items.each do |item| %>
        { label: "<%= Accpac::Icitem.find(item.ITEM).FMTITEMNO %>", value: <%= item.sold %> },
      <% end %>
    ]
  });
</script>
