<div class="modal inmodal fade" id="additional_cost" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Additional Costs</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-12">

            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Vendor</th>
                  <th>Vendor Name</th>
                  <th>Type</th>
                  <th>Description</th>
                  <th>Amount</th>
                </tr>
              </thead>
              <tbody>
                <% @accpac_porcph1.porcps.each do |cost| %>
                  <tr>
                    <td><%= cost.VDCODE %></td>
                    <td><%= cost.VDCODE %></td>
                    <td><%= cost.ADDCOST %></td>
                    <td><%= cost.DESCRIPTIO %></td>
                    <td align="right"><%= number_to_currency(cost.AMOUNT, presicion: 2) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <!-- Additional Cost Total -->
            <table class="table invoice-total">
              <tbody>
                <tr>
                  <td><strong>TOTAL:</strong></td>
                  <td><%= number_to_currency(@accpac_porcph1.porcps.sum(:AMOUNT), presicion: 2) %></td>
                <tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
