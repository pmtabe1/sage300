<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-8">
    <h2>Inventory Control</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        Inventory Control
      </li>
      <li>
        Assemblies
      </li>
      <li class="active">
        <b><%= @accpac_icasen.DOCNUM %></b>
      </li>
    </ol>
  </div>
  <div class="col-lg-4">
    <div class="title-action">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal5">
        <i class="fa fa-search"></i>&nbsp;Search</button>
      </button>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInRight">
      <div class="ibox-content p-xl">
        <div class="row">
          <div class="col-sm-6">
            <% if @accpac_icasen.PRINTED = true %>
              Assembly Posted!
            <% else %>
              <%= link_to "Post Assembly to Shopify", shopify_post_accpac_icasen_path %>
            <% end %>
            <h5>Description:</h5>
            <p><%= @accpac_icasen.HDRDESC %></p>
          </div>

          <div class="col-sm-6 text-right">
            <h4>Assembly No.</h4>
            <h4 class="text-navy"><%= @accpac_icasen.DOCNUM %></h4>
            <p>
              <span><strong>Date:</strong> <%= to_date_helper(@accpac_icasen.TRANSDATE) %></span><br />
              <span><strong>Entered by:</strong> <%= @accpac_icasen.ENTEREDBY %></span><br />
            </p>
          </div>
        </div>

        <div class="table-responsive m-t">
          <%= render_async details_accpac_icasen_path do %>
            <h4><i class="fa fa-spinner fa-pulse fa-fw"></i> Loading details...</h4>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<%= render 'modal' %>


